{
    "name": "codeception/laravel-module-tests",
    "description": "Codeception Laravel Module tests",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Nieves",
            "homepage": "https://medium.com/@ganieves"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-pdo": "*",
        "laravel/framework": "^8.75",
        "laravel/ui": "^3.4"
    },
    "require-dev": {
        "ext-fileinfo": "*",
        "ext-json": "*",
        "barryvdh/laravel-debugbar": "^3.6",
        "barryvdh/laravel-ide-helper": "^2.10",
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^2.0",
        "codeception/module-laravel": "^2.1 | *@dev",
        "facade/ignition": "^2.17",
        "fakerphp/faker": "^1.17",
        "nunomaduro/collision": "^5.10",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4.0"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/_build/support"
        ],
        "psr-4": {
            "Tests\\": [
                "tests/",
                "tests/_build/support"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.testing', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"fopen('database/database.sqlite', 'w');\"",
            "@php artisan key:generate --ansi",
            "@php artisan migrate --seed"
        ]
    }
}
