{
    "name": "codeception/laravel-module-tests",
    "description": "Codeception Laravel Module tests",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Nieves",
            "homepage": "https://medium.com/@ganieves"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "ext-pdo": "*",
        "laravel/framework": "^6.20",
        "laravel/ui": "^1.3"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5",
        "barryvdh/laravel-ide-helper": "^2.8",
        "codeception/codeception": "5.0 | *@dev",
        "codeception/lib-innerbrowser": "^1.5 | *@dev",
        "codeception/module-asserts": "dev-codecept5",
        "codeception/module-laravel": "dev-codecept5",
        "facade/ignition": "^1.16",
        "fakerphp/faker": "^1.13",
        "nunomaduro/collision": "^3.1",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.3.0"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/_build/support"
        ],
        "psr-4": {
            "Tests\\": [
                "tests/",
                "tests/_build/support"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.testing', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"fopen('database/database.sqlite', 'w');\"",
            "@php artisan key:generate --ansi",
            "@php artisan migrate --seed"
        ]
    }
}
